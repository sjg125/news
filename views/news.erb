<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Google Fonts -->
    <!-- Swap out "Roboto" for the font(s) you want to use -->
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.12.0/css/all.css" crossorigin="anonymous">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    
    <!-- Your own CSS -->
    <link rel="stylesheet" href="/styles.css">

    <title>News</title>
  </head>

  <body>

    <!--Title-->
    <div class="page-header">
        <p>
            <div class="col-md-12">
                <h4>Your Personalized Newsletter</h4>
            </div>
        </p>
    </div>

    <!--Go Back Button--->
    <div class="col-md-12">
        <p>  
            <form>
                <input type="button" value="Enter a different location" onclick="history.back()">
                <br>
            </form>
        </p>
    </div>

    <!--Section 1: Weather--->
    <div class="container mt-5">
        <p>
            <h1>Weather and Forecast for Your Location</h1>
                <div> 
                    <h2>Current Weather:</h2>
                        The current temperature and weather is <%= @current_temp %> degrees and <%= @current_weather %>
                    <br>
                    <br>
                    <h2>Weather Forecast over the Next Week:</h2>
                    <% for weather in @forecast["daily"]["data"]%>
                        <div>
                            The forecast for 
                            <%= Time.at(weather["time"]).strftime("%a") %> 
                            is a high temperature of 
                            <%= weather["temperatureHigh"] %>
                            degrees and <%= weather["summary"] %>
                        </div>
                    <% end %>
                </div> 
        </p>  
    </div>

    <br>

    <!--Section 2: News--->
    <div class="container">
        <p>
            <div class="row">
                <div class="col-md-12">
                    <h1>Latest Headlines Regardless of Your Location</h1>
                </div>
                <% for headlines in @news["articles"] %>
                    <div class="col-md-6">
                        <%= headlines["title"] %>
                        <br>
                    </div>
                    <div class="col-md-6">
                        <h3>
                            <a href= "<%= headlines["url"] %>"><%= headlines["url"] %></a>
                        </h3>
                        <br>
                    </div>
                    <br>
                <% end %>
            </div>
        </p>
   </div>

    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>